# Use a base Python image
FROM python:3.9-slim-buster

# Set working directory to /var/task (AWS Lambda default)
WORKDIR /var/task

# Copy application files into the container
COPY transform_raw.py .
COPY requirements-transform-raw.txt .

# Install dependencies
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements-transform-raw.txt

# Set the ENTRYPOINT to execute the Python script
ENTRYPOINT ["python", "transform_raw.py"]