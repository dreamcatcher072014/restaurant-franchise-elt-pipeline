# Use a base Python image
FROM python:3.9-slim-buster

# Set working directory to /var/task (AWS Lambda default)
WORKDIR /var/task

# Copy application files into the container
COPY curate_transformed.py .
COPY requirements-curate-transformed.txt .

# Install dependencies
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements-curate-transformed.txt

# Set the ENTRYPOINT to execute the Python script
ENTRYPOINT ["python", "curate_transformed.py"]